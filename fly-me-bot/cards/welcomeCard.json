{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Image",
      "url": "https://i.postimg.cc/8PLM3Rt4/logo.png",
      "size": "stretch"
    },
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "default",
      "weight": "bolder",
      "text": "Welcome to FlyMe booking Bot",
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "TextBlock",
      "size": "default",
      "isSubtle": "true",
      "text": "I am at your service to organize your business or leisure trips.",
      "wrap": true,
      "maxLines": 0
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "100 travel ideas",
      "url": "https://tourscanner.com/blog/bucket-list-ideas/"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Check your planning",
      "url": "https://calendar.google.com/"
    }
  ]
}
